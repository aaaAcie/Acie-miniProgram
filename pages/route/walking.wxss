.flex-style{
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  z-index: 999;
}
.flex-item{
  height: 35px; 
  line-height: 35px;
  text-align: center;
  -webkit-box-flex: 1;
  -webkit-flex: 1;
  flex: 1
}
.flex-item.active{
  color:#0091ff;
}
.map_box{
  width: 100vw;
  height: 100vh;
}
#navi_map{
  width: 100%;
  height: 100%;
}
.text_box{
  position: fixed;
  left: 0;
  bottom: 0;
  height: 80px;
  width: 100vw;
  padding: 10px;
  box-sizing: border-box;
  background-color: #fff;
  box-shadow: 0px -5px 5px #ededed;
  border-radius: 30px 30px 0 0;
}
